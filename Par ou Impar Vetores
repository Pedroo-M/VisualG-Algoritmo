algoritmo "ParOuImparVetores"
var
   Val: Vetor[1..7] de Inteiro
   I, TotPar: Inteiro
inicio
      TotPar <- 0
      Para I <- 1 ate 7 faca
           Escreva("Digite o", I,"o. valor:")
           Leia(Val[i])
      FimPara
      
      Para I <- 1 ate 7 faca
           Se (Val[i] % 2 = 0) entao
              TotPar <- TotPar + 1
              EscrevaL("Valor PAR na Posicao ", I)
           FimSe
      FimPara
      EscrevaL("O total de numeros pares foi: ", TotPar)
fimalgoritmo
